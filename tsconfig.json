{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "index.d.ts"],

    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
